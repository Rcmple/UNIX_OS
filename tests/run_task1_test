# Run task1 with sanitizer

source FILES.txt

echo "--------------------"
echo "Compiling and testing task1 with sanitizers"
echo "--------------------"

sanitizers=( '-fsanitize=leak -fsanitize=address'
             '-fsanitize=memory -fsanitize-memory-track-origins=2' 
             '-fsanitize=undefined'
           )
t1=${task1%.*}

inputs=('0' '1' '2' '4' '8')

for sanitizer in "${sanitizers[@]}"
do 
  echo "--------------------"
  echo "Starting tests with the following sanitizer enabled: $sanitizer"
  echo "--------------------"

  clang $task1 $sanitizer -o $t1 || { echo "Unable to compile; see log" ; exit 1 ; }

  for input in "${inputs[@]}"
  do
    echo "Running with input number $input..."
    (./$t1 <<< $input) || { echo "Sanitizer failed; see log" ; exit 1 ; }
    wait
  done

  rm $t1
done
