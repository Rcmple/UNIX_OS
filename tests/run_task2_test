# Run task2 with sanitizer

source FILES.txt

echo "--------------------"
echo "Compiling and testing task2 with sanitizers"
echo "--------------------"

sanitizers=( '-fsanitize=leak -fsanitize=address'
             '-fsanitize=memory -fsanitize-memory-track-origins=2' 
             '-fsanitize=undefined'
           )
t2a=${task2a%.*}
t2b=${task2b%.*}

for sanitizer in "${sanitizers[@]}"
do 
  echo "--------------------"
  echo "Starting tests with the following sanitizer enabled: $sanitizer"
  echo "--------------------"

  clang $task2a $sanitizer -o $t2a || { echo "Unable to compile; see log" ; exit 1 ; }
  clang $task2b $sanitizer -o $t2b || { echo "Unable to compile; see log" ; exit 1 ; }

  ./$t2a || { echo "Sanitizer failed; see log" ; exit 1 ; }
  (./$t2a || { echo "Sanitizer failed; see log" ; exit 1 ; }) &
  (./$t2b || { echo "Sanitizer failed; see log" ; exit 1 ; })
  wait

  rm $t2a
  rm $t2b
done
